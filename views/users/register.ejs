<% layout('layouts/boilerplate')%>
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-4">
            <h1 class="fw-bold mb-4" style="letter-spacing: -0.02em;">Join JCamp</h1>
            <form action="/register" method="POST" class="validated-form" novalidate>
                <div class="mb-3">
                    <label class="form-label" for="username">Username</label>
                    <input class="form-control" type="text" id="username" name="username" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="email">Email</label>
                    <input class="form-control" type="email" id="email" name="email" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="password">Password</label>
                    <input class="form-control" type="password" id="password" name="password" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <button class="btn btn-apple w-100">Create Account</button>
                <p class="text-center mt-3 text-body-secondary small">Already have an account? <a href="/login"
                        class="text-decoration-none">Sign In</a></p>
            </form>
        </div>
    </div>